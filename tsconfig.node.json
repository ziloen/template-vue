{
  "compilerOptions": {
    "rootDir": "./",
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strictNullChecks": true,
    "allowJs": true,
    // "noEmit": true,
    "erasableSyntaxOnly": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "test",
    // config files
    "eslint.config.js",
    "vite.config.ts",
    "volar.config.js",
  ]
}